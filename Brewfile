#brew "exploitdb"
# Find new domains associated with a target
brew "findomain"
# Keeper Desktop Client
cask "keeper-password-manager"
# Notification when a persistent component is added
cask "knockknock"
# Useful for finding things in pdfs
brew "pdfgrep"
# Network monitor
cask "netiquette"
